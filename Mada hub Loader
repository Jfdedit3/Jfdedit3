-- Services
local TweenService = game:GetService("TweenService")
local CoreGui = game:GetService("CoreGui")

-- Couleurs
local NEON_COLOR = Color3.fromRGB(0, 225, 255)
local DARK_COLOR = Color3.fromRGB(15, 15, 25)

-- Effet néon pour bordures
local function applyNeonStroke(instance)
    local stroke = Instance.new("UIStroke")
    stroke.Color = NEON_COLOR
    stroke.Thickness = 2
    stroke.Parent = instance
    coroutine.wrap(function()
        while instance.Parent do
            TweenService:Create(stroke, TweenInfo.new(1.5, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut, -1), {Transparency = 0.7}):Play()
            task.wait(1.5)
            TweenService:Create(stroke, TweenInfo.new(1.5, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut, -1), {Transparency = 0}):Play()
            task.wait(1.5)
        end
    end)()
end

-- Particules holographiques
local function createHolographicEffect(parent)
    for i = 1, 15 do
        local p = Instance.new("Frame")
        p.Size = UDim2.new(0, math.random(2,4), 0, math.random(3,5))
        p.BackgroundColor3 = NEON_COLOR
        p.BackgroundTransparency = 0.8
        p.BorderSizePixel = 0
        p.Position = UDim2.new(math.random(), 0, math.random(), 0)
        p.Parent = parent
        coroutine.wrap(function()
            while parent.Parent do
                TweenService:Create(p, TweenInfo.new(math.random(2,4)), {
                    Position = UDim2.new(math.random(),0, math.random(),0),
                    BackgroundTransparency = math.random(0.7,0.9)
                }):Play()
                task.wait(math.random(2,4))
            end
        end)()
    end
end

-- Création de l'UI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "MadaHubV3"
ScreenGui.ResetOnSpawn = false
ScreenGui.IgnoreGuiInset = true
ScreenGui.Parent = CoreGui

local RootFrame = Instance.new("Frame")
RootFrame.AnchorPoint = Vector2.new(0.5, 0.5)
RootFrame.Position = UDim2.new(0.5,0,0.5,0)
RootFrame.Size = UDim2.new(0,0,0,0)
RootFrame.BackgroundColor3 = DARK_COLOR
RootFrame.ClipsDescendants = true
RootFrame.Parent = ScreenGui

applyNeonStroke(RootFrame)
createHolographicEffect(RootFrame)

TweenService:Create(RootFrame, TweenInfo.new(1, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {
    Size = UDim2.new(0.1, 200, 0.1, 125)
}):Play()

local DropShadow = Instance.new("ImageLabel")
DropShadow.Name = "DropShadow"
DropShadow.Parent = RootFrame
DropShadow.AnchorPoint = Vector2.new(0.5,0.5)
DropShadow.Position = UDim2.new(0.5,0,0.5,0)
DropShadow.Size = UDim2.new(1,47,1,47)
DropShadow.ZIndex = -1
DropShadow.Image = "rbxassetid://6014261993"
DropShadow.ImageColor3 = Color3.new(0,0,0)
DropShadow.ImageTransparency = 0.5
DropShadow.ScaleType = Enum.ScaleType.Slice
DropShadow.SliceCenter = Rect.new(49,49,450,450)

-- Titres
local MainTitle = Instance.new("TextLabel")
MainTitle.Name = "MainTitle"
MainTitle.Parent = RootFrame
MainTitle.AnchorPoint = Vector2.new(0.5,0)
MainTitle.Position = UDim2.new(0.5,0,0.05,0)
MainTitle.Size = UDim2.new(0.9,0,0.2,0)
MainTitle.BackgroundTransparency = 1
MainTitle.Font = Enum.Font.GothamBold
MainTitle.Text = "MADA HUB"
MainTitle.TextColor3 = NEON_COLOR
MainTitle.TextScaled = true
applyNeonStroke(MainTitle)

local SubTitle = Instance.new("TextLabel")
SubTitle.Name = "SubTitle"
SubTitle.Parent = RootFrame
SubTitle.AnchorPoint = Vector2.new(0.5,0)
SubTitle.Position = UDim2.new(0.5,0,0.25,0)
SubTitle.Size = UDim2.new(0.9,0,0.12,0)
SubTitle.BackgroundTransparency = 1
SubTitle.Font = Enum.Font.RobotoMono
SubTitle.Text = "<== | ==>"
SubTitle.TextColor3 = NEON_COLOR
SubTitle.TextTransparency = 0.3
SubTitle.TextScaled = true
applyNeonStroke(SubTitle)

local ButtonLog = Instance.new("Frame")
ButtonLog.Name = "ButtonLog"
ButtonLog.Parent = RootFrame
ButtonLog.AnchorPoint = Vector2.new(0.5,0)
ButtonLog.Position = UDim2.new(0.5,0,0.46,0)
ButtonLog.Size = UDim2.new(0.9,0,0.5,0)
ButtonLog.BackgroundTransparency = 1

local UIList = Instance.new("UIListLayout")
UIList.Parent = ButtonLog
UIList.FillDirection = Enum.FillDirection.Horizontal
UIList.HorizontalAlignment = Enum.HorizontalAlignment.Center
UIList.Padding = UDim.new(0,10)

local function createButton(name, text)
    local btn = Instance.new("TextButton")
    btn.Name = name
    btn.Parent = ButtonLog
    btn.Size = UDim2.new(0.44,0,0.42,0)
    btn.BackgroundColor3 = Color3.new(1,1,1)
    btn.BackgroundTransparency = 0.95
    btn.Font = Enum.Font.GothamBold
    btn.Text = text
    btn.TextScaled = true
    btn.TextColor3 = NEON_COLOR
    applyNeonStroke(btn)
    btn.MouseEnter:Connect(function()
        TweenService:Create(btn, TweenInfo.new(0.3), {Size = UDim2.new(0.474,0,0.454,0)}):Play()
    end)
    btn.MouseLeave:Connect(function()
        TweenService:Create(btn, TweenInfo.new(0.3), {Size = UDim2.new(0.44,0,0.42,0)}):Play()
    end)
    return btn
end

local BtnOld = createButton("Old","NEW VERSION")
local BtnNew = createButton("New","OLD VERSION")

local Hidden = Instance.new("Frame")
Hidden.Name = "Hidden"
Hidden.Parent = RootFrame
Hidden.AnchorPoint = Vector2.new(0.5,0.5)
Hidden.Position = UDim2.new(0.5,0,1.5,0)
Hidden.Size = UDim2.new(1,0,1,0)
Hidden.BackgroundColor3 = Color3.new(0,0,0)
Hidden.BackgroundTransparency = 0

local HiddenTitle = Instance.new("TextLabel")
HiddenTitle.Name = "HiddenTitle"
HiddenTitle.Parent = Hidden
HiddenTitle.AnchorPoint = Vector2.new(0.5,0.5)
HiddenTitle.Position = UDim2.new(0.5,0,0.5,0)
HiddenTitle.Size = UDim2.new(0.9,0,0.2,0)
HiddenTitle.BackgroundTransparency = 1
HiddenTitle.Font = Enum.Font.RobotoMono
HiddenTitle.Text = "Loading..."
HiddenTitle.TextScaled = true
HiddenTitle.TextColor3 = NEON_COLOR
applyNeonStroke(HiddenTitle)

local function startEffect()
    TweenService:Create(RootFrame, TweenInfo.new(0.5, Enum.EasingStyle.Quint), {Size = UDim2.new(0.1,190,0.1,115)}):Play()
    TweenService:Create(Hidden, TweenInfo.new(0.5, Enum.EasingStyle.Quint), {Position = UDim2.new(0.5,0,0.5,0)}):Play()
    task.delay(1, function()
        local tween = TweenService:Create(RootFrame, TweenInfo.new(1, Enum.EasingStyle.Quint, Enum.EasingDirection.In), {Size=UDim2.new(0,0,0,0)})
        tween:Play()
        tween.Completed:Wait()
        ScreenGui:Destroy()
    end)
end

BtnOld.MouseButton1Click:Connect(function()
    startEffect()
    pcall(function()
        task.wait(3)
        loadstring(game:HttpGet("https://raw.githubusercontent.com/Jfdedit3/Mada-hub-upd/refs/heads/main/3"))()
    end)
end)

BtnNew.MouseButton1Click:Connect(function()
    startEffect()
    pcall(function()
        task.wait(3)
        loadstring(game:HttpGet("https://raw.githubusercontent.com/Jfdedit3/Mada-hub-upd/main/oldver"))()
    end)
end)
