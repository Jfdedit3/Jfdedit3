-- Get the player and their PlayerGui
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Create the ScreenGui "MadaHubLoader"
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "MadaHubLoader"
screenGui.Parent = playerGui

-- Create the main frame
local mainFrame = Instance.new("Frame")
mainFrame.Name = "MainFrame"
mainFrame.Parent = screenGui
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
mainFrame.BorderSizePixel = 0
mainFrame.Position = UDim2.new(0.5, -180, 0.5, -220)
mainFrame.Size = UDim2.new(0, 360, 0, 440)
mainFrame.Active = true
mainFrame.Draggable = true

-- Add a title to the interface
local title = Instance.new("TextLabel")
title.Name = "Title"
title.Parent = mainFrame
title.BackgroundTransparency = 1
title.Position = UDim2.new(0, 0, 0, 10)
title.Size = UDim2.new(1, 0, 0, 50)
title.Text = "MADA HUB"
title.TextColor3 = Color3.fromRGB(0, 225, 255)
title.Font = Enum.Font.GothamBold
title.TextScaled = true

local underline = Instance.new("Frame")
underline.Parent = mainFrame
underline.Position = UDim2.new(0.5, -100, 0, 65)
underline.Size = UDim2.new(0, 200, 0, 2)
underline.BackgroundColor3 = Color3.fromRGB(0, 225, 255)

-- List of scripts to load
local scripts = {
    { name = "‚ö° KOLINSKI admin FE",    url = "https://raw.githubusercontent.com/Jfdedit3/KOLINSKI/refs/heads/main/KOLINSKI.lua" },
    { name = "üëë Nameless Admin",      url = "https://raw.githubusercontent.com/toyahfur/Nameless-Admin-2.0/main/unfinished-source-code" },
    { name = "üñ•Ô∏è CMD FE",              url = "https://raw.githubusercontent.com/lxte/cmd/main/testing-main.lua" },
    { name = "üéµ Nameless music",      url = "https://raw.githubusercontent.com/Jfdedit3/Nameless-music-lunch/refs/heads/main/Main" },
    { name = "üîß Honoka Executor",     url = "https://raw.githubusercontent.com/Jfdedit3/honoka-executor/main/Honoka%20executor%20byz4trox" },
    { name = "üíÄ z4trox Hub v1",       url = "https://raw.githubusercontent.com/Jfdedit3/z4trox-hub-v1/refs/heads/main/z4trox%20hub" }
}

-- Generic function to create a button
local function createButton(name, text, position)
    local button = Instance.new("TextButton")
    button.Name = name
    button.Parent = mainFrame
    button.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    button.BorderSizePixel = 0
    button.Position = position
    button.Size = UDim2.new(0, 300, 0, 45)
    button.Text = text
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Font = Enum.Font.Gotham
    button.TextScaled = true
    button.AutoButtonColor = false

    button.MouseEnter:Connect(function()
        button.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    end)
    button.MouseLeave:Connect(function()
        button.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    end)
    return button
end

-- Dynamically create buttons based on the 'scripts' table
for i, cfg in ipairs(scripts) do
    local yOffset = 80 + (i - 1) * 55
    local btn = createButton("Btn"..i, cfg.name, UDim2.new(0.5, -150, 0, yOffset))
    btn.MouseButton1Click:Connect(function()
        btn.Text = "Loading..."
        spawn(function()
            local ok, err = pcall(function()
                loadstring(game:HttpGet(cfg.url))()
            end)
            if not ok then
                warn("Error loading "..cfg.name..": "..err)
            end
            btn.Text = cfg.name
        end)
    end)
end
